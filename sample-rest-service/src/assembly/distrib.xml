<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>${project.artifactId}-${project.version}/lib</outputDirectory>
			<includes>
				<include>${project.artifactId}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/webservice</directory>
			<outputDirectory>${project.artifactId}-${project.version}</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>bin/**</exclude>
				<exclude>install/**</exclude>
				<exclude>rc/**</exclude>
				<exclude>resources/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/webservice</directory>
			<outputDirectory>${project.artifactId}-${project.version}</outputDirectory>
			<includes>
				<include>bin/**</include>
				<include>install/**</include>
				<include>rc/**</include>
				<include>resources/**</include>
			</includes>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</fileSet>

		<fileSet>
			<directory>.</directory>
			<outputDirectory>${project.artifactId}-${project.version}/log</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		
		<fileSet>
			<directory>${project.build.directory}/generated-resources/licenses</directory>
			<outputDirectory>${project.artifactId}-${project.version}/licenses</outputDirectory>
			<includes>
				<include>*/**</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>